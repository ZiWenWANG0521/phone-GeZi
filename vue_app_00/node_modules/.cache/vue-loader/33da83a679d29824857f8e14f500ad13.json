向绑定 v-model-->\r\n        <textarea placeholder=\"最多120字\" maxlength=\"120\" rows=\"5\" v-model=\"msg\"></textarea>\r\n        <mt-button size=\"large\" @click=\"postComment\">发表评论</mt-button>\r\n        <div class=\"cmt-list\">\r\n            <div class=\"cmt-item\" v-for=\"(item,i) in list\">\r\n                <div class=\"cmt-info\">{{i+1}}楼 用户:{{item.user_name}},发表时间:{{item.ctime|datetimeFilter}}</div>\r\n                <div class=\"cmt-body\">{{item.content}}</div>\r\n            </div>\r\n            <mt-button size=\"large\" @click=\"getMore\">加载更多</mt-button>\r\n        </div>\r\n    </div>\r\n</template>\r\n\r\n<script>\r\n    /*一个组件使用时,当前组件引入,其他组件引入时,在main.js中引入*/\r\n    import {Toast} from \"mint-ui\"\r\n\r\n    export default {\r\n        name: \"comment\",\r\n        data(){\r\n            return {msg:\"\",pageIndex: 0,pageSize:5,list:[]}\r\n        },\r\n        methods:{\r\n          postComment(){\r\n                var nid=this.id;\r\n                var msg=this.msg;\r\n                if(msg.trim().length==0){\r\n                    Toast(\"小老弟,没写内容就想评论的?\");\r\n                    return;\r\n                }else{\r\n                    var url=\"http://127.0.0.1:3000/postcomment\";\r\n                    this.$http.post(url,{nid:nid,msg:msg}).then(result=>{\r\n                            Toast(result.body.msg)\r\n                           this.pageIndex=0;\r\n                           this.list=[];\r\n                           this.msg=\"\"\r\n                           this.getMore()\r\n                    })\r\n                }\r\n          },\r\n          getMore(){\r\n              this.pageIndex++;\r\n              var url=\"getComment?id=\"+this.id+\"&pno=\"+this.pageIndex+\"&pageSize=\"+this.pageSize\r\n              this.$http.get(url).then(result=>{\r\n                  var rows=this.list.concat(result.body.data)\r\n                 this.list=rows\r\n                  this.pageCount=result.body.pageCount\r\n              })\r\n          }\r\n        },\r\n        created(){\r\n          this.getMore()\r\n        },\r\n        /*此ID可直接this.id使用*/\r\n        props:[\"id\"]\r\n    }\r\n</script>\r\n\r\n<style scoped>\r\n    .app-comment h1{\r\n        font-size:10px;\r\n    }\r\n    .cmt-item{\r\n        margin:8px 0;\r\n    }\r\n.cmt-info,.cmt-body{\r\n    color:#0AA1ED;\r\n\r\n}\r\n    .app-comment .cmt-list .cmt-body{\r\n        line-height: 35px;\r\n        text-indent:2em;\r\n    }\r\n    .cmt-item{\r\n        background:#000000;\r\n    }\r\n    .cmt-item .cmt-body,.cmt-info{\r\n        color:#FFFFFF;\r\n    }\r\n</style>"]}]}